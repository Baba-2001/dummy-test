<% content_for :title, "Editing post" %>

<h1 class="text-2xl font-bold mb-4">Editing post</h1>

<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <%= render "form", post: @post %>
</div>

<div class="mt-4">
  <%= link_to "SHOW THIS POST", @post, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %> |
  <%= link_to "Back to posts", posts_path, class: "text-blue-500 hover:text-blue-700" %>
</div>
